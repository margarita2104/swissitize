<div class="p-10 flex space-x-10">
  <!-- Left Section: User Profile -->
  <div class="w-1/3 border-r pr-6">
    <div class="flex flex-col items-center">
      <div class="relative">
        <%= image_tag("default-avatar.svg", class: "rounded-full w-32 h-32") %>
        <%= link_to edit_user_path(@user), class: "absolute top-0 right-0 p-2" do %>
          <%= image_tag("icons/edit.svg", class: "w-6") %>
        <% end %>
      </div>
      <h1 class="text-xl font-bold mt-4"><%= @user.first_name %> <%= @user.last_name %></h1>
      <p class="text-gray-500">@<%= @user.username %></p>
      <p class="text-gray-400">Joined <%= @user.created_at.strftime("%B %Y") %></p>
    </div>
    <div class="mt-6">
      <p><strong>Canton:</strong> <%= @user.canton %></p>
      <p><strong>Country of origin:</strong> <%= @user.country_of_origin %></p>
      <p><strong>Languages:</strong> <%= @user.languages.present? ? JSON.parse(@user.languages).join(", ") : "Not specified" %></p>
    </div>
  </div>
  <!-- Right Section: Achievements & Activity -->
  <div class="w-2/3">
    <!-- Achievements -->
    <h2 class="text-lg font-bold">Achievements</h2>
    <div class="border rounded-lg p-4 mt-2">
      <% if @achievements.any? %>
        <% @achievements.each do |achievement| %>
          <div class="flex items-center mb-3">
            <%= image_tag("icons/medal.svg", class: "w-8 h-8") %>
            <div class="ml-3">
              <p class="font-bold"><%= achievement.title %></p>
              <p class="text-gray-500 text-sm"><%= achievement.description %></p>
            </div>
          </div>
        <% end %>
      <% else %>
        <p>No achievements yet.</p>
      <% end %>
    </div>
    <!-- Activity Calendar -->
    <h2 class="text-lg font-bold mt-8">Activity</h2>
    <div class="border rounded-lg p-4 mt-2">
      <%= render "calendar", user: @user %>
    </div>
  </div>
</div>
