<% current_month = Date.today.strftime("%B %Y") %>
<h3 class="text-center text-gray-700"><%= current_month %></h3>
<div class="grid grid-cols-7 text-center text-gray-500 text-sm mt-2">
  <span>M</span> <span>T</span> <span>W</span> <span>T</span> <span>F</span> <span>S</span> <span>S</span>
</div>
<div class="grid grid-cols-7 text-center text-gray-800 mt-2">
  <% (Date.today.beginning_of_month..Date.today.end_of_month).each do |date| %>
    <% activity = user.activities.find_by(date: date) %>
    <div class="w-10 h-10 flex items-center justify-center rounded-full
         <% if activity %>bg-orange-300<% else %>text-gray-400<% end %>">
      <%= date.day %>
    </div>
  <% end %>
</div>
