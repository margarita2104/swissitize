<p style="color: green"><%= notice %></p>
<h1 class="text-4xl mb-5">
  <%= @card_collection.name %>
</h1>
<p class="mb-5 w-2/3">
  <%= @card_collection.description %>
</p>
<% if @card_collection.cards.any? %>
  <div id="practice-card" class="w-2/3 mb-10 shadow-lg min-h-96 cursor-pointer bg-[#E5E3E321] rounded-3xl flex items-center justify-center px-10">
    <div class="text-center">
      <p class="text-xl font-semibold mb-5" id="question"><%= @card_collection.cards.first.question %></p>
      <p class="text-xl hidden" id="answer"><%= @card_collection.cards.first.answer %></p>
    </div>
  </div>
  <div class="w-2/3 flex justify-between items-center">
    <div class="flex items-center gap-5">
      <button id="play" data-collection-id="<%= @card_collection.id %>">
        <%= image_tag("icons/play-cards.svg") %>
      </button>
      <button id="shuffle" data-collection-id="<%= @card_collection.id %>">
        <%= image_tag("icons/shuffle-cards.svg") %>
      </button>
    </div>
    <div class="flex items-center gap-5">
      <button id="prev" data-card-id="<%= @card_collection.cards.first.id %>" data-collection-id="<%= @card_collection.id %>">
        <%= image_tag("icons/previous-card.svg") %>
      </button>
      <span>
        <span id="card-index">
          <%= @card_collection.cards.index(@card_collection.cards.first) + 1 %> / <%= @card_collection.cards.size %>
        </span>
      </span>
      <button id="next" data-card-id="<%= @card_collection.cards.first.id %>" data-collection-id="<%= @card_collection.id %>">
        <%= image_tag("icons/next-card.svg") %>
      </button>
    </div>
    <div class="flex items-center">
      <%= link_to edit_card_collection_path(@card_collection) do %>
        <%= image_tag("icons/edit.svg") %>
      <% end %>
    </div>
  </div>
<% else %>
  <p>No cards available for this collection.</p>
<% end %>
<div>
  <%= link_to "Back to practice decks", card_collections_path %>
  <%= button_to "Delete this practice deck", @card_collection, method: :delete %>
</div>