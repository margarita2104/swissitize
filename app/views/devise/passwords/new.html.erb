<section class="pt-10 flex flex-col items-center h-dvh bg-clear-sky" style="background-image: url('<%= asset_path("registration-bg.svg") %>'); background-size: contain; background-repeat:no-repeat; background-position:bottom;">
  <h1 class="text-4xl mb-6">Forgot your password?</h1>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "w-full max-w-md flex flex-col items-center" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field w-full mb-5">
      <%= f.label :email, class: "block text-black mb-1" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full py-2 px-4 bg-transparent border border-mercury text-black rounded-md" %>
    </div>
    <div class="actions mt-6">
      <%= f.submit "Send me reset password instructions", class: "py-3 px-6 bg-swiss-red hover:bg-thunderbird cursor-pointer text-white rounded-full" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</section>
